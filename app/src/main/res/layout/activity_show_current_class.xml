<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".student.mainPageStudent.CurrentClassAndStudentsActivity">

    <TextView
        android:id="@+id/labelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="55dp"
        android:background="@drawable/border"
        android:fontFamily="@font/asap"
        android:text="Ð¡urrent classroom"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/current_classroom_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="100dp"
        android:textAlignment="viewStart"
        android:layout_toRightOf="@+id/textView3"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="63dp"
        android:layout_height="26dp"
        android:layout_marginTop="135dp"
        android:text="Name:"
        android:layout_marginLeft="20dp"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Floor: "
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:layout_marginTop="215dp" />

    <TextView
        android:id="@+id/floor_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="215dp"
        android:layout_marginStart="140dp"
        android:layout_toRightOf="@id/textView"
        android:text="1 floor"
        android:textAlignment="viewStart"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student count:"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="250dp"/>


    <TextView
        android:id="@+id/current_classroom_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="135dp"
        android:layout_toRightOf="@+id/textView4"
        android:text="Name"
        android:textAlignment="viewStart"
        android:textSize="18sp" />




    <TextView
        android:id="@+id/textView3"
        android:layout_width="62dp"
        android:layout_height="23dp"
        android:layout_marginTop="96dp"
        android:text="ID:"
        android:layout_marginLeft="20dp"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/count_students"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="84dp"
        android:layout_marginTop="250dp"
        android:text="0 students"
        android:layout_marginStart="72dp"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:layout_toRightOf="@id/textView7"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room number:"
        android:layout_marginLeft="20dp"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="175dp"
        />

    <TextView
        android:id="@+id/room_number"
        android:layout_width="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="94dp"
        android:layout_marginTop="175dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/textView5"
        android:text="#"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="151dp"
        android:layout_height="42dp"
        android:background="@drawable/border"
        android:text="Students:"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButtonStudents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@drawable/add"
        tools:ignore="VectorDrawableCompat"
        android:layout_marginTop="650dp"
        android:layout_marginLeft="325dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewStudents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/textView11"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp" />

</RelativeLayout>



